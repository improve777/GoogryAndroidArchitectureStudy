<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ticker"
            type="dev.daeyeon.gaasproject.data.entity.Ticker" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!--코인명-->
            <TextView
                android:id="@+id/tvCoinName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{ticker.market}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvTradePrice"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="XRP" />

            <!--현재가-->
            <TextView
                android:id="@+id/tvTradePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:text="@{ticker.tradePrice}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvChangeRate"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvCoinName"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="543" />

            <!--전일대비-->
            <TextView
                android:id="@+id/tvChangeRate"
                rateColor="@{ticker.signedChangeRate}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:text="@{ticker.signedChangeRate}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvAccTradePrice"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvTradePrice"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="-1.99%" />

            <!--거래대금-->
            <TextView
                android:id="@+id/tvAccTradePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="@{ticker.accTradePrice24h}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvChangeRate"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="48,559M" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>